<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/layout_left"
        android:visibility="gone"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="100dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/img_user_left"
            android:src="@drawable/user"/>
        <TextView
            android:id="@+id/tv_left_msg"
            android:layout_margin="5dp"
            android:layout_toRightOf="@+id/img_user_left"
            android:background="@drawable/bg_user_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Hello there"
            android:textColor="@color/white" />
        <TextView
            android:layout_below="@+id/tv_left_msg"
            android:visibility="visible"
            android:id="@+id/tv_left_date"
            android:layout_toRightOf="@+id/img_user_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="date"
            android:textSize="@dimen/extrasmall"
            android:textColor="@color/black" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_right"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginLeft="100dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:id="@+id/img_user_right"
            android:src="@drawable/user"/>
        <TextView
            android:id="@+id/tv_right_msg"
            android:layout_margin="5dp"
            android:layout_toLeftOf="@+id/img_user_right"
            android:background="@drawable/bg_user_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Hello there"
            android:textColor="@color/white" />
        <TextView
            android:layout_toLeftOf="@+id/img_user_right"
            android:layout_below="@+id/tv_right_msg"
            android:visibility="visible"
            android:id="@+id/tv_right_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="date"
            android:textSize="@dimen/extrasmall"
            android:textColor="@color/black" />
    </RelativeLayout>
</RelativeLayout>
