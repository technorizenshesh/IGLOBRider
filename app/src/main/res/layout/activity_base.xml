<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <FrameLayout
            android:id="@+id/contentFrame"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigationview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:clickable="true"
        android:fitsSystemWindows="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/logout"
                android:background="@color/toobarcolor"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:layout_marginTop="30dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:weightSum="5">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/user_imguser_img"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="10dp"
                                android:src="@drawable/user" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/user_name"
                                    android:layout_width="match_parent"

                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:padding="2dp"
                                    android:text="Mac Andreu"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/large" />

                                <TextView
                                    android:id="@+id/mywalletmoney"
                                    android:layout_width="match_parent"

                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:padding="2dp"
                                    android:text="@string/walletbalance"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/small" />


                            </LinearLayout>


                        </LinearLayout>

                        <ImageView
                            android:id="@+id/setting_img"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_alignParentRight="true"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ic_settings"
                            android:visibility="gone" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/drawemenuback"
                        android:orientation="vertical"
                        android:padding="15dp">

                        <LinearLayout
                            android:id="@+id/homelay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:visibility="gone"
                            android:weightSum="8">

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center"
                                android:src="@drawable/home" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="7"
                                android:padding="2dp"
                                android:text="@string/home"
                                android:textColor="@color/white"
                                android:textSize="@dimen/large" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:weightSum="8">

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center"
                                android:src="@drawable/home" />

                            <Switch
                                android:id="@+id/swt_vip"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="7"
                                android:padding="2dp"
                                android:text="VIP"
                                android:theme="@style/SCBSwitch"
                                android:textColor="@color/white"
                                android:textSize="@dimen/large" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/myprofile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:weightSum="8">

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_avatar_white" />

                            <TextView
                                android:layout_width="0dp"

                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="7"
                                android:padding="2dp"
                                android:text="@string/myprofile"
                                android:textColor="@color/white"
                                android:textSize="@dimen/large" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/adddriver"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:visibility="gone"
                            android:weightSum="8">

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center"
                                android:src="@drawable/favdriver" />

                            <TextView
                                android:layout_width="0dp"

                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="7"
                                android:padding="2dp"
                                android:text="@string/favdriver"
                                android:textColor="@color/white"
                                android:textSize="@dimen/large" />

                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/ridehistory"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:weightSum="8">

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_location" />

                            <TextView
                                android:layout_width="0dp"

                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="7"
                                android:padding="2dp"
                                android:text="@string/yourtrips"
                                android:textColor="@color/white"
                                android:textSize="@dimen/large" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/add_card_lay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:visibility="visible"
                            android:weightSum="8">

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_payment" />

                            <TextView
                                android:layout_width="0dp"

                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="7"
                                android:padding="2dp"
                                android:text="@string/payment"
                                android:textColor="@color/white"
                                android:textSize="@dimen/large" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/mywallet"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:visibility="visible"
                            android:weightSum="8">

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_wallet" />

                            <TextView
                                android:layout_width="0dp"

                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="4"
                                android:padding="2dp"
                                android:text="@string/mywallet"
                                android:textColor="@color/white"
                                android:textSize="@dimen/large" />


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/emergencycontact"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:weightSum="8">

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_phonebook" />

                            <TextView
                                android:layout_width="0dp"

                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="7"
                                android:padding="2dp"
                                android:text="@string/emergencycontact"
                                android:textColor="@color/white"
                                android:textSize="@dimen/large" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/invitelay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:weightSum="8">

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_email" />

                            <TextView
                                android:layout_width="0dp"

                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="7"
                                android:padding="2dp"
                                android:text="@string/invitefriend"
                                android:textColor="@color/white"
                                android:textSize="@dimen/large" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/notificationlay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:visibility="gone"
                            android:weightSum="8">

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_notification" />

                            <TextView
                                android:layout_width="0dp"

                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="7"
                                android:padding="2dp"
                                android:text="@string/notification"
                                android:textColor="@color/white"
                                android:textSize="@dimen/large" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/aboutuslay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:weightSum="8">

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center"
                                android:src="@drawable/about" />

                            <TextView
                                android:layout_width="0dp"

                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="7"
                                android:padding="2dp"
                                android:text="@string/aboutus"
                                android:textColor="@color/white"
                                android:textSize="@dimen/large" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/privacylay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:weightSum="8">

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center"
                                android:src="@drawable/privacy" />

                            <TextView
                                android:layout_width="0dp"

                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="7"
                                android:padding="2dp"
                                android:text="@string/privacypolicy"
                                android:textColor="@color/white"
                                android:textSize="@dimen/large" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/termslay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:weightSum="8">

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center"
                                android:src="@drawable/termscond" />

                            <TextView
                                android:layout_width="0dp"

                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="7"
                                android:padding="2dp"
                                android:text="@string/termscondition"
                                android:textColor="@color/white"
                                android:textSize="@dimen/large" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/supportlay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="10dp"
                            android:visibility="gone"
                            android:weightSum="8">

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_support_white" />

                            <TextView
                                android:layout_width="0dp"

                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="7"
                                android:padding="2dp"
                                android:text="@string/support"
                                android:textColor="@color/white"
                                android:textSize="@dimen/large" />

                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/language_lay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="10dp"
                            android:weightSum="8">

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_support_white" />

                            <TextView
                                android:layout_width="0dp"

                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="7"
                                android:padding="2dp"
                                android:text="@string/chagne_language"
                                android:textColor="@color/white"
                                android:textSize="@dimen/large" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>


            </ScrollView>

            <LinearLayout
                android:id="@+id/logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/toobarcolor"
                android:paddingLeft="15dp"
                android:paddingTop="7dp"
                android:paddingRight="15dp"
                android:paddingBottom="7dp"
                android:weightSum="8">

                <ImageView
                    android:layout_width="25dp"

                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_logout"
                    android:visibility="visible" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="7"
                    android:padding="2dp"
                    android:text="@string/logout"
                    android:textColor="@color/white"
                    android:textSize="@dimen/large" />

            </LinearLayout>

        </RelativeLayout>
    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
